<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.carrotgarden.gamer.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="com.carrotgarden.gamer.Perspective"
            id="carrot-gamer.perspective">
      </perspective>
   </extension>
   <extension
         id="product_id"
         point="org.eclipse.core.runtime.products">
      <product
            application="carrot-gamer.application"
            name="product_name">
         <property
               name="appName"
               value="product_name">
         </property>
      </product>
   </extension>

</plugin>
